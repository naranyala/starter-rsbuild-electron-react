{
  "name": "electron-react-rsbuild",
  "version": "0.1.2",
  "description": "Boilerplate using Rsbuild as bundler for Electron apps.",
  "type": "module",
  "scripts": {
    "deps:latest": "bunx npm-check-updates -u -p bun",
    "dev": "bun run scripts/start-dev-rsbuild.cjs",
    "rsbuild-dev": "bunx rsbuild dev --open",
    "electron-dev": "bunx electron ./dist-electron/main.js --start-dev",
    "start": "bunx electron ./dist-electron/main.js",
    "prebuild": "bun run scripts/build-icons.js",
    "build": "bun run build:web && bun run build:electron",
    "build:web": "bunx rsbuild build",
    "build:electron": "bunx tsc --project tsconfig.electron.json",
    "postbuild": "bun run scripts/build-icons.js",
    "rsbuild-build": "bunx rsbuild build",
    "type-check": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check --write .",
    "lint-check": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "format-check": "bunx @biomejs/biome format .",
    "electron-pack": "bunx electron-builder --dir",
    "electron-dist": "bunx electron-builder",
    "electron-postinstall": "bunx electron-builder install-app-deps",
    "dist": "bun run build && bun run electron-dist"
  },
  "author": "naranyala",
  "build": {
    "appId": "com.some.electron.quickstart",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "dist/icon.png"
    },
    "win": {
      "target": "msi",
      "icon": "dist/icon.png"
    },
    "files": [
      "dist/**/*"
    ]
  },
  "keywords": [
    "rsbuild",
    "react",
    "electron"
  ],
  "license": "MIT",
  "dependencies": {
    "get-port": "^7.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "styled-components": "^6.3.8",
    "winbox": "^0.2.82"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.7.2",
    "@rsbuild/plugin-react": "^1.4.3",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-reload": "^1.5.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
